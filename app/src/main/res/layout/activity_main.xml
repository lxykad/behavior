<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lxy.behevior.MainActivity">

    <Button
        android:id="@+id/bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickShow"
        android:text="55" />

    <TextView
        android:id="@+id/tv_depentent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="top|left"
        android:background="#39c6c1"
        android:gravity="center"
        android:text="depentent" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="top|right"
        android:background="#39c6c1"
        android:gravity="center"
        android:text="behavior"
        app:layout_behavior="com.lxy.behevior.UpBehavior" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_margin="25dp"
        app:backgroundTint="#ff87ffeb"
        app:elevation="6dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:pressedTranslationZ="12dp"
        app:rippleColor="#39c6c1" />


</android.support.design.widget.CoordinatorLayout>
